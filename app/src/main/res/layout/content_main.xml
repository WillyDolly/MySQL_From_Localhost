
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.popland.pop.mysql_from_localhost.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:hint="nhap ten sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EDTtensp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/LV"
        android:layout_alignEnd="@+id/LV" />

    <EditText
        android:hint="nhap gia sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/EDTgiasp"
        android:layout_below="@+id/EDTtensp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EDTtensp"
        android:layout_alignEnd="@+id/EDTtensp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="them"
        android:id="@+id/BTNthem"
        android:layout_below="@+id/EDTgiasp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/LV"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BTNthem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cập nhật"
        android:id="@+id/BTNupdate"
        android:layout_below="@+id/EDTgiasp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
